// .swiper-pagination-bullets.swiper-pagination-horizontal
// width auto
html.lenis
  height auto

.accordion__text
  display none

.hero__info__title
  z-index 20

.hero__info__titleMark
  z-index 20

.hero__info__title-mark::before
  content url('https:\/\/uploads-ssl.webflow.com\/63eaa604a8a840ce06c9aa6d\/63eb9be563b7cf6636cf97b2_Vectors-Wrapper.svg')
  position absolute
  top 60%
  left 60%
  transform translate(-50%, -50%)
  z-index -1

.what__left::before
  content ''
  display block
  width 240px
  height 100%
  background #FB9700
  position absolute
  top 0
  left 0
  transform translateX(-100%)

html.w-editor::after
  display none !important

// swiper-------------------
.swiper-wrapper
  grid-column-gap 0 !important
  grid-row-gap 0 !important

.why-wrap3
  filter drop-shadow(-50px 50px 30px rgba(0, 0, 0, 0.05))

.how__swiper
  margin 0 !important
  // width 100% !important

.why__swiper
  margin 0 !important
  overflow visible !important
  width 960px
  height 280px

.leftarrow, .rightarrow
  cursor pointer

.consultation__content__img
  filter drop-shadow(-200px 200px 200px rgba(0, 0, 0, 0.5))

.how__container
  --swiper-theme-color #fb9700
  --swiper-pagination-bullet-size 10px
  --swiper-pagination-bullet-inactive-color white
  --swiper-pagination-bullet-inactive-opacity 1
  --swiper-pagination-bullet-horizontal-gap 10px

.how__container .swiper-wrapper
  display block

.results__img
  margin 0 !important

.how__container .swiper-wrapper
  display block

.results__img
  margin 0 !important

.results__logos__slide
  width auto !important

.why__logos
  width 100%
  height 80px
  overflow visible !important

  .swiper-slide-thumb-active
    // background #000
    filter none
    opacity 1
    transition-duration 0.5s
    transition-property filter, opacity

  .logos__item
    // height auto !important
    width auto
    // max-height 100%
    height 100% !important
    max-width 110px
    // max-height 70px
    object-fit contain

  .results__logos__slide
    cursor pointer
    display flex
    align-items center
    // background #999
    // height 100% !important

.results
  // width 100%
  // overflow hidden

@media screen and (max-width 991px)
  .hero__info__title-mark::before
    transform translate(-50%, -50%) scale(0.7)

@media screen and (max-width 768px)
  .hero__info__title-mark::before
    transform translate(-50%, -50%) scale(0.5)

  .how__container .swiper-wrapper
    display flex
    align-items start

  .results__img
    width auto
    height auto !important

  .results__img-wrap
    overflow hidden

@media only screen and (max-width 640px)
  .consultation__content__img
    filter drop-shadow(-70px 70px 70px rgba(0, 0, 0, 0.9))

  .how__swiper
    overflow hidden !important
    // width 400px !important

  .why__swiper
    overflow hidden !important
    width 100%
    height 600px

  .why__swiper-slide
    height calc(((100% - 40px) / 2)) !important

@media only screen and (max-width 480px)
  .why__swiper
    height 400px

  .why__logos
    height 60px
    width 100%
    overflow visible !important

    .logos__item
      height auto
      // width auto
      // max-height 80px
      max-width 120px
      // width 120px
      // height auto

  .testimonials__item__logos
    justify-content space-evenly

  .testimonials__logo
    display flex
    justify-content center

    svg
      max-height 60px
      max-width 80px

.swiper-pagination
  position relative !important

.how__pagination__bullet--active
  // background-color white !important

var(--swiper-pagination-bullet-inactive-color, #fff) !important

.how__titleNav__arrows
  z-index 100 !important