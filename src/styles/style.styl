// .swiper-pagination-bullets.swiper-pagination-horizontal
// width auto
html.lenis
  height auto

.accordion__text
  display none

.hero__info__title
  z-index 20

.hero__info__titleMark
  z-index 20

.hero__info__title-mark::before
  content url('https:\/\/uploads-ssl.webflow.com\/63eaa604a8a840ce06c9aa6d\/63eb9be563b7cf6636cf97b2_Vectors-Wrapper.svg')
  position absolute
  top 60%
  left 60%
  transform translate(-50%, -50%)
  z-index -1

.what__left::before
  content ''
  display block
  width 240px
  height 100%
  background #FB9700
  position absolute
  top 0
  left 0
  transform translateX(-100%)

html.w-editor::after
  display none !important

// swiper-------------------
.why-wrap3
  filter drop-shadow(-50px 50px 30px rgba(0, 0, 0, 0.05))

.how__swiper
  margin 0 !important
  // width 100% !important

.why__swiper
  margin 0 !important
  overflow visible !important
  width 960px
  height 280px

.leftarrow, .rightarrow
  cursor pointer

.consultation__content__img
  filter drop-shadow(-200px 200px 200px rgba(0, 0, 0, 0.5))

.how__container
  // padding 0 30px !important

.how__container .swiper-wrapper
  display block

@media screen and (max-width 991px)
  .hero__info__title-mark::before
    transform translate(-50%, -50%) scale(0.7)

@media screen and (max-width 768px)
  .hero__info__title-mark::before
    transform translate(-50%, -50%) scale(0.5)

  .how__container .swiper-wrapper
    display flex

@media only screen and (max-width 640px)
  .consultation__content__img
    filter drop-shadow(-70px 70px 70px rgba(0, 0, 0, 0.9))

  .how__swiper
    overflow hidden !important
    // width 400px !important

  .why__swiper
    overflow hidden !important
    width 100%
    height 600px

  .why__swiper-slide
    height calc(((100% - 40px) / 2)) !important

@media only screen and (max-width 480px)
  .why__swiper
    height 400px

.how__titleNav__arrows
  z-index 100 !important